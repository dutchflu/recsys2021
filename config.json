{
  "pipeline_type": "training_evaluation_pipeline",
  "data_provider_config": {
    "load_config": {
      "raw_data_path": "../data/part-00000.csv",
      "split_size": 0.2
    },
    "data_config": {
      "label_cols": ["like_timestamp"],
      "categorical_features": ["engaged_with_user_id", "enaging_user_id", "language", "tweet_type"],
      "normal_features": ["enaging_user_follower_count"]
    }
  },
  "model_config": {
    "model_type": "lightgbm",
    "hyperparameters": {
      "objective": "binary",
      "num_class": 1,
      "boosting_type": "gbdt",
      "importance_type": "gain",
      "num_leaves": 5,
      "max_depth": 6,
      "n_estimators": 10,
      "learning_rate": 1e-1,
      "min_split_gain": 0,
      "min_child_weight": 1e-3,
      "min_child_samples": 20,
      "subsample": 1.0,
      "subsample_freq": 10,
      "colsample_bytree": 1.0,
      "n_jobs": -1
    },
    "fit_config": {
      "eval_metric": ["logloss"],
      "early_stopping_rounds": 20
    }
  },
  "train_config":{
    "val_size": 0.20
  }
}
